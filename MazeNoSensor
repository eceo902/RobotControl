#pragma config(Sensor, dgtl1,  rightEncoder,   sensorQuadEncoder)
#pragma config(Sensor, dgtl3,  leftEncoder,    sensorQuadEncoder)
#pragma config(Sensor, dgtl6,  limitSwitch,    sensorTouch)
#pragma config(Sensor, dgtl8,  sonarInput,     sensorSONAR_inch)
#pragma config(Motor,  port1,           leftMotor,     tmotorVex393_HBridge, openLoop, reversed)
#pragma config(Motor,  port10,          rightMotor,    tmotorVex393_HBridge, openLoop, reversed)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

/*
Project Title: 3.1.7 Robot Control Design
Team Members: Evan Seeyave, Noah Bruckner, Raymond Shen, Sam Deason
Date:Date: 12/4/17
Section:

Task Description: Complete the maze with no sensors


Pseudocode:
Push limit switch
Wait 1 second to run
Turn on motors for set time
Point turn right
Turn on motors for set time
Point turn right
Turn on motors for set time
Point turn left
Turn on motors for set time
Point turn left
Turn on motors for set time
Point turn left
Turn on motors for set time
Stop

*/
task main()
{			//Program begins, insert code within curly braces

	while(SensorValue[limitSwitch] == 0)      //idle loop
	{
	}

	wait1Msec(2000);

	motor[leftMotor] = 60;		//move forward
	motor[rightMotor] = 65;

	wait1Msec(2500);

	motor[leftMotor] = 60;		//turn right
	motor[rightMotor] = -65;

	wait1Msec(825);

	motor[leftMotor] = 60;		//move forward
	motor[rightMotor] = 65;

	wait1Msec(1550);

	motor[leftMotor] = 60;		//turn right
	motor[rightMotor] = -65;

	wait1Msec(825);

	motor[leftMotor] = 60;		//move forward
	motor[rightMotor] = 65;

	wait1Msec(2000);

	motor[leftMotor] = -60;		//turn left
	motor[rightMotor] = 65;

	wait1Msec(840);

	motor[leftMotor] = 60;		//move forward
	motor[rightMotor] = 65;

	wait1Msec(5300);

	motor[leftMotor] = -60;		//turn left
	motor[rightMotor] = 65;

	wait1Msec(825);

	motor[leftMotor] = 60;		//move forward
	motor[rightMotor] = 65;

	wait1Msec(3650);

	motor[leftMotor] = -60;		//turn left
	motor[rightMotor] = 65;

	wait1Msec(825);

	motor[leftMotor] = 60;		//move forward
	motor[rightMotor] = 65;

	wait1Msec(1750);

	motor[leftMotor] = 0;		 //stop
	motor[rightMotor] = 0;

}